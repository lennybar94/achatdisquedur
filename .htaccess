# ----------------------------------------
# 1. Réécriture d’URL + Redirection HTTPS + www
# ----------------------------------------
RewriteEngine On

# Rediriger vers HTTPS + www
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\.achatdisquedur\.fr$ [NC]
RewriteRule ^ https://www.achatdisquedur.fr%{REQUEST_URI} [L,R=301]

# ----------------------------------------
# 2. Sitemap et robots
# ----------------------------------------
RewriteRule ^sitemap\.xml$ /sitemap.xml [L]
RewriteRule ^robots\.txt$ /robots.txt [L]

# ----------------------------------------
# 3. Compression GZIP
# ----------------------------------------
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
  AddOutputFilterByType DEFLATE text/javascript application/javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# ----------------------------------------
# 4. Mise en cache des ressources
# ----------------------------------------
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
  ExpiresByType image/jpg "access plus 30 days"
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/svg+xml "access plus 30 days"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType application/json "access plus 7 days"
</IfModule>

# ----------------------------------------
# 5. Sécurité
# ----------------------------------------

# Désactiver l’affichage des répertoires
Options -Indexes

# Clickjacking et CSP
<IfModule mod_headers.c>
  Header always append X-Frame-Options SAMEORIGIN
  Header set X-Content-Type-Options nosniff
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Content-Security-Policy "default-src 'self' https://www.achatdisquedur.fr; script-src 'self' https://plausible.io; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self';"
</IfModule>

# ----------------------------------------
# 6. Protection du fichier .htaccess
# ----------------------------------------
<Files .htaccess>
  Order allow,deny
  Deny from all
</Files>
